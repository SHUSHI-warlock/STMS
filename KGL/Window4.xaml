<Window x:Class="卡管理.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:卡管理"
        mc:Ignorable="d"
        Title="Window4" Height="450" Width="800">
    <Grid>
        <ListView HorizontalAlignment="Left" Height="410" VerticalAlignment="Top" Width="794" Margin="0,0,-0.4,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="  卡号  " DisplayMemberBinding="{Binding Id}" Width="100"/>
                    <GridViewColumn Header="  姓名  " DisplayMemberBinding="{Binding Name}" Width="auto"/>
                    <GridViewColumn Header="  性别  " DisplayMemberBinding="{Binding Sex}" Width="auto"/>
                    <GridViewColumn Header="  消费流水号  " DisplayMemberBinding="{Binding PayId}" Width="200"/>
                    <GridViewColumn Header="  消费时间  " DisplayMemberBinding="{Binding TimeofPayment}" Width="100"/>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
