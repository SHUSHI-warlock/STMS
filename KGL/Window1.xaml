<Window x:Class="卡管理.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:卡管理"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Button Content="注册用户" HorizontalAlignment="Left" Width="80" BorderThickness="0" Background="White" Click="Regist" Margin="10,0,0,395" Height="25" VerticalAlignment="Bottom"/>
        <Button Content="删除用户" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="80" Height="25" BorderThickness="0" Background="White" Click="Del" Margin="96,0,0,0"/>
        <Button Content="修改用户" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="80" Height="25" BorderThickness="0" Background="White" Click="Recharge" Margin="190,0,0,0"/>
        <Button Content="查看记录" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="80" Height="25" BorderThickness="0" Background="White" Click="Find" Margin="294,0,0,0"/>

        <ListView Name="listView" HorizontalAlignment="Left" Height="380" Margin="0,30,0,0" VerticalAlignment="Top" Width="784">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header=" 卡号 " DisplayMemberBinding="{Binding Id}" Width="200"/>
                    <GridViewColumn Header=" 姓名 " DisplayMemberBinding="{Binding Name}" Width="auto"/>
                    <GridViewColumn Header=" 性别 " DisplayMemberBinding="{Binding Sex}" Width="auto"/>
                    <GridViewColumn Header=" 身份 " DisplayMemberBinding="{Binding Role}" Width="auto"/>
                    <GridViewColumn Header=" 余额 " DisplayMemberBinding="{Binding Money}" Width="auto"/>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
